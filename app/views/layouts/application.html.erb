<!DOCTYPE html>
<html>
  <head>
    <title>Cars</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="/assets/common_styles.scss" rel="stylesheet" type="text/css" />
  </head>

  <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>                        
                      </button>
                      <%= link_to 'My Cars App', cars_path, :class=>"navbar-brand" %>
                </div>

                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><%= link_to 'Cars', cars_path %></li>
                        <li><%= link_to 'Comments', comments_path %></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid text-center">    
            <div class="row content">
                <div class="col-sm-2 sidenav">
                      <p><%= link_to 'New Car', new_car_path %></p>
                </div>

                <div class="col-sm-8 text-left"> 
                    <%= yield %>
                </div>

                <div class="col-sm-2 sidenav">
                    <div class="well"><p>ADS</p></div>
                    <div class="well"><p>ADS</p></div>
                </div>
            </div>
        </div>

        <footer class="container-fluid text-center">
            <p>My Cars App</p><p><%= Time.now.strftime("%m/%d/%Y")%></p>
        </footer>
  </body>
</html>

<script type="text/javascript">

    $("table").tablesorter({
        theme : "bootstrap",
        headerTemplate : '{content} {icon}', 
        widgets : [ "uitheme"],
    });
    
</script>