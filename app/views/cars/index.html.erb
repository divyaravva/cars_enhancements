<p id="notice"><%= notice %></p>

<h1 class="text-center">Cars</h1>

<div class="text-right">
    <span><%= image_tag "pdf.jpg", :onclick=>"generate_pdf()", :class => "pdf_styles" %></span>
    <span><%= image_tag "csv.jpg", :onclick=>"generate_excel()", :class => "pdf_styles" %></span>
</div>

<table class="table table-striped table-bordered table-hover margin_top" align="center">
    <%= render partial: "header_data" %>
  
    <tbody>
        <%= render partial: "show_cars_data", :locals => {all_cars_data: @cars}%>
    </tbody>
</table>
<br>


<script type="text/javascript">
  function generate_pdf()
  {
      window.location="/cars/generate_pdf"
  }

  function generate_excel()
  {
      window.location="/cars/generate_excel"
  }
</script>

