<%= form_with(model: comment, local: true) do |form| %>
<%= hidden_field_tag "car_id", @car.id unless @car.blank?%>
  <% unless comment.blank?%>
    <% if comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <%end%>


  <table align="center">
      <%unless @car.blank?%>
          <tr>
              <td><%= form.label :car_id %><span>:</span></td>
              <td><%= @car.model %></td>
          </tr>

          <tr>
              <td><%= form.label :make %><span>:</span></td>
              <td><%= @car.make %></td>
          </tr>

          <tr>
              <td><%= form.label :year %><span>:</span></td>
              <td><%= @car.year%></td>
          </tr>
      <%end%>

      <tr>
          <td><%= form.label :commnet_body %><span>:</span></td>
          <td><%= form.text_area :commnet_body,  :class=>"form-control", :placeholder => "Enter Comment"%></td>
      </tr>

      <tr class="actions">
          <td></td>
          <td style="padding-top: 10px;"><%= form.submit %><%= link_to 'Cars', cars_path %>|
            <%= link_to 'Show', @comment %> |
            <%= link_to 'All Comments', comments_path %>
          </td>
      </tr>
  </table>
<% end %>
