<p id="notice"><%= notice %></p>

<h1 class="style_for_heading">Comments</h1>
<div class="text_align_center">
   <span class="margin_left"><%= link_to 'Cars', cars_path %></span>
</div>

<table class="table table-striped table-bordered custom_css_for_tbl margin_top" align="center">
  <thead>
    <tr>
      <th>Car</th>
      <th>Commnet body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.car_id %></td>
        <td><%= comment.commnet_body %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
